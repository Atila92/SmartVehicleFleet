<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.atila.smartvehiclefleet.SettingsActivity"
    tools:showIn="@layout/app_bar_settings">

    <RelativeLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/settingsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change search radius"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="108dp"
            tools:layout_editor_absoluteY="16dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="99dp"
            android:max="3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/seekBarHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="TextView"
            android:layout_marginBottom="18dp"
            android:layout_above="@+id/seekBar"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/cirkle"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@+id/settingsHeader"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/cirkle" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
